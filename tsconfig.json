{
  "compilerOptions": {
    // Input / Output
    "rootDir": "./src",
    "outDir": "./dist",

    // Module System (for Node.js + ES Modules)
    "module": "commonjs",
    "target": "es2020",

    // Node compatibility
    "lib": ["es2020"],
    "types": ["node"],

    // Type Safety
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    // JavaScript / TS behavior
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,

    // Output Options
    "sourceMap": true
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
