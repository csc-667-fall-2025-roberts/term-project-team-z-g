{
  "name": "term-project",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build:backend": "rm -rf dist && tsc && cp -R src/backend/views dist/views",
    "build:frontend": "esbuild src/frontend/entrypoint.ts --bundle --outfile=dist/public/js/bundle.js",
    "build": "npm run build:backend && npm run build:frontend",
    "start": "node dist/server.js",
    "dev:frontend": "esbuild src/frontend/entrypoint.ts --bundle --outfile=src/backend/public/js/bundle.js --sourcemap --target=es2020 --watch",
    "dev:backend": "nodemon --exec ts-node --transpile-only src/backend/server.ts",
    "dev": "concurrently --names \"backend,frontend,live\" --prefix-colors \"green,blue,magenta\" \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:live\"",
    "start:dev": "concurrently --names \"backend,frontend\" --prefix-colors \"green,blue\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "lint": "eslint src/",
    "migrate:create": "node-pg-migrate create -j ts --",
    "migrate:up": "NODE_OPTIONS='--import tsx' node-pg-migrate up",
    "migrate:down": "NODE_OPTIONS='--import tsx'node-pg-migrate down"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/connect-livereload": "^0.6.3",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/livereload": "^0.9.5",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.6.0",
    "@types/socket.io": "^3.0.1",
    "@types/socket.io-client": "^1.4.36",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "autoprefixer": "^10.4.21",
    "bcrypt": "^6.0.0",
    "connect-pg-simple": "^10.0.0",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "http-errors": "^2.0.0",
    "morgan": "^1.10.1",
    "node-pg-migrate": "^7.6.1",
    "pg-promise": "^12.3.0",
    "postcss": "^8.5.6",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^3.4.18",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "connect-livereload": "^0.6.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "livereload": "^0.10.3",
    "nodemon": "^3.1.11",
    "prettier": "^3.6.2",
    "prettier-plugin-ejs": "^1.0.3",
    "prettier-plugin-organize-imports": "^4.3.0",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.49.0"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
