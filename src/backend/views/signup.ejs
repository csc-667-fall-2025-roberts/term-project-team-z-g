<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Sign Up â€“ Hidden Joker Rummy</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body class="auth-page">
    <nav class="navbar navbar-dark bg-dark shadow-sm">
      <div class="container">
        <a class="navbar-brand" href="/">Hidden Joker Rummy</a>
      </div>
    </nav>

    <main class="auth-shell">
      <div class="auth-panel">
        <div class="auth-heading text-center">Sign Up Screen</div>
        <h1 class="auth-title text-center mb-3">Create Your Account</h1>
        <% if (typeof error !== 'undefined') { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <form method="post" action="/auth/signup" class="stack gap-3">
          <div class="outline-field">
            <label for="email" class="outline-label">Email Address</label>
            <input id="email" type="email" name="email" required />
          </div>
          <div class="outline-field">
            <label for="username" class="outline-label">Username</label>
            <input id="username" type="text" name="username" required />
          </div>
          <div class="outline-field">
            <label for="password" class="outline-label">Password</label>
            <input id="password" type="password" name="password" required />
          </div>
          <div class="outline-field">
            <label for="confirm" class="outline-label">Confirm Password</label>
            <input id="confirm" type="password" name="confirm_password" required />
          </div>
          <button type="submit" class="btn-outline">Create Account</button>
        </form>
        <div class="auth-footer">
          <span>Already have account?</span>
          <a href="/auth/login">Log In</a>
        </div>
      </div>
    </main>
  </body>
</html>
