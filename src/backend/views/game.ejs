<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Game #<%= game.id %> – Hidden Joker Rummy</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body>
    <nav class="navbar navbar-dark bg-dark shadow-sm">
      <div class="container d-flex justify-content-between align-items-center">
        <a class="navbar-brand" href="/lobby">Hidden Joker Rummy</a>
        <a href="/lobby" class="btn btn-outline-light btn-sm">Back to Lobby</a>
      </div>
    </nav>

    <main class="main-container">
      <div class="container">
        <!-- Top game info card -->
        <div class="card mb-3 shadow hoverable">
          <div class="card-body d-flex justify-content-between align-items-center">
            <div>
              <h1 class="h5 mb-1"><%= game.name %></h1>
              <div class="small text-muted">
                Game ID: <%= game.id %> · State: <%= game.state %> · Max Players: <%= game.max_players %>
              </div>
            </div>
            <div class="small text-muted text-end">
              Hidden Joker Rank:
              <strong><%= game.hidden_joker_rank || 'TBD' %></strong>
            </div>
          </div>
        </div>

        <!-- Game board layout -->
        <div class="game-board shadow mb-3">
          <div class="row g-3">
            <!-- Center: discard + deck -->
            <div class="col-12 text-center mb-3">
              <div class="game-zone-title">Table Center</div>
              <p class="mb-1 small text-muted">Discard pile & draw deck will be here.</p>
              <div class="game-center-row mt-2">
                <div class="card px-3 py-2 bg-dark border-secondary">
                  <div class="small text-muted text-center">Discard Pile</div>
                </div>
                <div class="card px-3 py-2 bg-dark border-secondary">
                  <div class="small text-muted text-center">Draw Deck</div>
                </div>
              </div>
            </div>

            <!-- Your hand -->
            <div class="col-12">
              <div class="game-zone-title">Your Hand</div>
              <div class="game-hand-area mt-2">
                <span class="text-muted small">
                  Your cards will be rendered here as interactive elements.
                </span>
              </div>
            </div>

            <!-- Other players -->
            <div class="col-12">
              <div class="game-zone-title">Other Players</div>
              <div class="mt-2 d-flex flex-wrap gap-2">
                <div class="player-pill">Player 2 · 10 cards</div>
                <div class="player-pill">Player 3 · 10 cards</div>
                <div class="player-pill">Player 4 · 10 cards</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
