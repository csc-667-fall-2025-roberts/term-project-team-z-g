<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Game #<%= game.id %> Results</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body class="lobby-page">
    <nav class="navbar navbar-dark bg-dark shadow-sm">
      <div class="container d-flex justify-content-between align-items-center">
        <a class="navbar-brand" href="/lobby">Hidden Joker Rummy</a>
        <div class="d-flex align-items-center gap-3">
          <% if (currentUser) { %>
            <span class="text-light small">Hi, <strong><%= currentUser.username %></strong></span>
          <% } %>
          <a href="/lobby" class="btn btn-outline-light btn-sm">Back to Lobby</a>
          <a href="/auth/logout" class="btn btn-outline-light btn-sm">Logout</a>
        </div>
      </div>
    </nav>

    <main class="main-container">
      <div class="container" style="max-width: 960px;">
        <div class="card shadow-lg border-0">
          <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-start mb-3">
              <div>
                <h1 class="h4 mb-1">Game #<%= game.id %> Results</h1>
                <div class="text-muted">Status: <span class="badge bg-success">Finished</span></div>
              </div>
              <div class="text-end">
                <div class="fw-bold">Winner</div>
                <div class="fs-5"><%= winner?.username || 'Unknown winner' %></div>
                <% if (hiddenJokerRank) { %>
                  <div class="small text-muted mt-1">Hidden Joker: <strong><%= hiddenJokerRank %></strong></div>
                <% } %>
              </div>
            </div>

            <div class="mb-4">
              <h2 class="h6 text-uppercase text-muted mb-2">Scoreboard</h2>
              <div class="list-group list-group-flush">
                <% if (scores && scores.length) { %>
                  <% scores.forEach((score, idx) => { %>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                      <div>
                        <span class="fw-bold me-2"><%= idx + 1 %>.</span>
                        <%= score.name %>
                        <% if (winner && score.name === winner.username) { %>
                          <span class="badge bg-success ms-2">Winner</span>
                        <% } %>
                      </div>
                      <span class="badge bg-primary">Cards: <%= score.points %></span>
                    </div>
                  <% }); %>
                <% } else { %>
                  <div class="list-group-item text-muted">No score data available.</div>
                <% } %>
              </div>
            </div>

            <div class="d-flex gap-2 flex-wrap">
              <a class="btn btn-primary" href="/games/<%= game.id %>">Return to Table</a>
              <a class="btn btn-outline-secondary" href="/lobby">Back to Lobby</a>
            </div>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
